<h1>Interview</h1>

<h4> Company Name : <%= interview.company_name %> </h2>
<h4> Date of Interview : <%= interview.date %> </h2>

<form action="/interviews/interview/<%= interview._id %>/add-student" method="post">
    <label for="student">Select a student:</label>
    <select name="student" id="student" required>
      <% for(let student of students) { %>
        <option value="<%= student.id %>"><%= student.name %></option>
      <% }; %>
    </select>
    <label for="results">Select results status:</label>
    <select name="results" id="results">
        <option value="PASS">Pass</option>
        <option value="FAIL">Fail</option>
        <option value="On Hold">On Hold</option>
        <option value="Didnâ€™t Attempt">Did Not Attempt</option>
    </select>
    <button type="submit">Submit</button>
</form>

<ol>
    <% for(let student of interview.students){ %>
        <p>
            Student Name : <%= student.student.name %> , Result : <%= student.result %>
        </p>
    <% } %>
</ol>
